{% extends 'base.html.twig' %}
{% block title %}Adding/Modifying an Office{% endblock %}
{% block stylesheets %}
<style>
    .coordinates {
        background: rgba(0, 0, 0, 0.5);
        color: #fff;
        position: absolute;
        bottom: 40px;
        left: 10px;
        padding: 5px 10px;
        margin: 0;
        font-size: 11px;
        line-height: 18px;
        border-radius: 3px;
        display: none;
        z-index: 1;
    }
</style>
   {% endblock %}
{% block body %}
    <div class="container">
        <div class="offices-header">
            <h2 class="offices-title"></h2>
        </div>
        <div class="row">
        <div id='map' class="col-6">
            <pre id="coordinates" class="coordinates"></pre>
        </div>
        <div class="col-6">
            <div class="col-sm-12 offices-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {{ form_start(form) }}
                    <div class="col-md-12">
                        <div class="form-group col-md-12">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.price) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.location) }}
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                {{ form_row(form.lat) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.lon) }}
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.upload) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.available) }}
                        </div>
                        
                        <div class="form-group col-md-4 pull-right">
                            {{ form_widget(form.create) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/gh/bigdatacloudapi/js-reverse-geocode-client@latest/bigdatacloud_reverse_geocode.min.js" type="text/javascript"></script>
  <script>
        /* Initialise Reverse Geocode API Client */
    var reverseGeocoder=new BDCReverseGeocode();
      mapboxgl.accessToken = 'pk.eyJ1Ijoia2FydmV6IiwiYSI6ImNrZGtwdGRsajBxd20zMG50c2t1MzRmNGIifQ.zUkJ4rXmsi-h2a4oLJg-Jw';
        var map = new mapboxgl.Map({
          container: 'map', // Container ID
          style: 'mapbox://styles/mapbox/streets-v11', // Map style to use
          center: [-122.25948, 37.87221], // Starting position [lng, lat]
          zoom: 12, // Starting zoom level
        });
        var geocoder = new MapboxGeocoder({ // Initialize the geocoder
            accessToken: mapboxgl.accessToken, // Set the access token
            mapboxgl: mapboxgl, // Set the mapbox-gl instance
            marker: false, // Do not use the default marker style
            placeholder: 'Search', // Placeholder text for the search bar
            //bbox: [-122.30937, 37.84214, -122.23715, 37.89838], // Boundary for Berkeley
            proximity: {
              longitude: -122.25948,
              latitude: 37.87221
            } // Coordinates of UC Berkeley
          });

        // Add the geocoder to the map
        map.addControl(geocoder);
        var marker = new mapboxgl.Marker({
            draggable: true
            })
            .setLngLat([0, 0])
            .addTo(map);

        function onDragEnd() {
        var lngLat = marker.getLngLat();
        coordinates.style.display = 'block';
        coordinates.innerHTML =
        'Longitude: ' + lngLat.lng + '<br />Latitude: ' + lngLat.lat;
        }

        marker.on('dragend', onDragEnd);
        map.on('click', function(e) {
            marker.setLngLat(e.lngLat)
            onDragEnd();
            $("#office_form_lat").val(e.lngLat.lat);
            $("#office_form_lon").val(e.lngLat.lng);
              reverseGeocoder.getClientLocation({
                    latitude: e.lngLat.lat,
                    longitude: e.lngLat.lng,
                },function(result) {
                    var address = result.countryName + ", " + result.principalSubdivision + ", " + result.city + ", "+ result.postcode;
                    //console.log(result);
                    console.log(address);
                    $("#office_form_location").val(address);
                });
        });
        function cursorChanged(c) {
            // body...
        }
    reverseGeocoder.localityLanguage='us';


</script>
{% endblock %}