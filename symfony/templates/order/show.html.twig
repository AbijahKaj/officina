{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>ID</th>
            <td>{{ order.id }}</td>
        </tr>
        <tr>
            <th>Approved</th>
            <td>{{ order.approved ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Remarks</th>
            <td>{{ order.remarks }}</td>
        </tr>
        <tr>
            <th>From</th>
            <td>{{ order.fromDate ? order.fromDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Until</th>
            <td>{{ order.untilDate ? order.untilDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ order.price }}</td>
        </tr>
        <tr>
            <th>Office</th>
            <td>{{ order.officeId }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to my orders</a>

{% endblock %}
