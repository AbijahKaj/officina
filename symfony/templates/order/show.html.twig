{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Approved</th>
                <td>{{ order.approved ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Owner_id</th>
                <td>{{ order.ownerId }}</td>
            </tr>
            <tr>
                <th>Booked_by</th>
                <td>{{ order.bookedBy }}</td>
            </tr>
            <tr>
                <th>From_date</th>
                <td>{{ order.fromDate ? order.fromDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Until_date</th>
                <td>{{ order.untilDate ? order.untilDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Office_id</th>
                <td>{{ order.officeId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
