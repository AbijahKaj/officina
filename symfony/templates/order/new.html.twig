{# templates/order/new.html.twig #} {% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="offices-header">
            <h2 class="offices-title">Create new Order</h2>
        </div>
        <div class="col-md-10 ml-md-auto">
            <div class="card bg-light mb-3 mt-5" style="width: 800px">
                <div class="card-body">
                    <div class="card-header mb-3">New order</div>
                    {{ form_start(form) }}
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.from_date, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.until_date, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.remarks, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">

                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-btn fa-user"></i> Save
                            </button>
                        </div>
                    </div>

                    {{ form_end(form, {'render_rest': true}) }}

                    <a href="/">back to homepage</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}